<div class="product-details">
  <div class="container pt-5">
    {{> messages}}
  </div>
  <div class="container card">
    <div class="row">
      <div class="col-sm-5">
          <div>
            <img src="{{image}}" width="450px">
          </div>
      </div>
      <div class="col-sm-7">
        <div class="card-body p-5">
          <!-- Product Name -->
          <h2 class="title pt-4 pb-2">{{name}}</h2>
          <!-- Item Description -->
          <div class="text-justify">
            <p>{{desc}}</p>
          </div>
          <form class="form-div" action="/add_to_cart/{{_id}}" method="POST">
            <div class="row">
              <div class="col">
                <!-- Product Price -->
                <h3>â‚±{{price}}</h3>
              </div>
              <div class="col">
                <!-- Quantity -->
                <div class="quantity buttons_added">
                  <input type="button" class="rounded-start btn btn-secondary btnQty" id="minus" value="-">
                  <input type="number" step="1" min="1" max="99" name="qty" value="1" title="Quantity to Add" class="input-text qty text" size="4" id="itemQty">
                  <input type="button" class="rounded-end btn btn-secondary btnQty" id="plus" value="+">
                </div>
              </div>
            </div>
            <!-- Buttons -->
            <div class="container text-end">
              <button class="btn btn-secondary rounded-circle" id="btnCart">
                <span class="material-icons">add_shopping_cart</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div id="productId" hidden>{{_id}}</div>
  </div>

  <!-- Contact Us -->
  {{> contact-us}}

</div>