<section id="editProduct">
  <div class="container mt-5">
    <h4>{{title}}</h4>
    <hr>
    <form action="/edit_item/{{id}}" method="POST" enctype="multipart/form-data">
      <div class="row">
        <div class="leftCol-2 pt-5 text-end pe-4">
          <img src="{{image}}" width="250px">
        </div>
        <div class="rightCol-1 pt-3">
          <div class="col-8">
              <div class="form-floating pb-2">
                <input type="text" class="form-control" id="name" name="name" placeholder="{{name}}">
                <label>Product Name (Current: {{name}})</label>
              </div>
              <div class="form-floating pb-2">
                <input type="text" class="form-control" id="desc" name="desc" placeholder="{{desc}}">
                <label>Product Description</label>
              </div>
              <div class="form-floating pb-2">
                <input type="text" class="form-control" id="categ" name="categ" placeholder="{{categ}}">
                <label>Product Category (Current: {{categ}})</label>
              </div>
              <div class="form-floating pb-2">
                <input type="text" class="form-control" id="price" name="price" placeholder="₱{{price}}">
                <label>Product Price (Current: ₱{{price}})</label>
              </div>
              <div class="form-group">
                <div>
                  <label for="image">Upload New Product Image</label>
                </div>
                <div>
                  <input type="file" class="form-control" id="image" name="image">
                </div>
              </div>
          </div>
        </div>
      </div>
      <div class="row pt-4">
        <div class="container text-center">
          <button type="submit" class="btn btn-secondary w-15">Change Details</button>
          <a href="/view_listing" type="button" class="btn btn-secondary w-15">Cancel Edit</a>
        </div>
      </div>
    </form>
  </div>
</section>