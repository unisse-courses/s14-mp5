<!-- Nameplate -->
<section id="nameplate" class="d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <img src="{{img}}" class="img-fluid" alt="{{alt_text}}">
      </div>
      <div class="col-lg-6 pt-lg-0 d-flex flex-column justify-content-center">
        <h1 class="nameplate-title">{{title}}</h1>
        <h4 class="nameplate-subtitle">{{desc}}</h4>
        <div></div>
      </div>
    </div>
  </div>
</section>
