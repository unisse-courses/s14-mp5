<div class="order-details">
  <div class="container mt-5">
    <div class="row">
      <div class="col pt-2">
        <h4>{{title}}</h4>
      </div>
      <div class="col text-end"> 
        <a href="/order_history" class="btn btn-secondary">Go Back to History</a>
      </div>
    </div>
  </div>
  <hr>
  <div class="container">
    <div class="row">
      <div class="col-7 pt-3 border border-2 border-dark rounded-3">
        <div class="row">
          <div class="col-3">Product Name</div>
          <div class="col-3 text-center">Quantity</div>
          <div class="col-3 text-end">Unit Price</div>
          <div class="col-3 text-end">Total Price</div>
        </div>
        <hr>
        {{#each cartItems}}
          <div class="row">
            <div class="col-3">{{this.name}}</div>
            <div class="col-3 text-center">{{this.qty}}</div>
            <div class="col-3 text-end">₱ {{this.unitPrice}}</div>
            <div class="col-3 text-end">₱ {{this.subPrice}}</div>
          </div>
        {{/each}}
        <hr>
        <div class="row">
          <div class="col-6"></div>
          <div class="col-3 text-end"><h5>Total:</h5></div>
          <div class="col-3 text-end"><h5>₱ {{total}}</h5></div>
        </div>
      </div>
      <div class="col-1 pt-3"></div>
      <div class="col-4 pt-3">
        <div class="pb-2"><strong>Order ID: {{_id}}</strong></div>
        <div>Status: {{status}}</div>
        <div>Ordered on: {{orderDate}}</div>
      </div>
    </div>
  </div>
</div>